<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
	android:orientation="vertical" 
    android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView  android:id="@+id/login_password_textview"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/login_password_text" />
            
        <EditText android:id="@+id/login_password_edittext"
            android:password="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
	<LinearLayout android:id="@+id/check_password_widget"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView android:id="@+id/login_passwordcheck_textview"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/login_passwordcheck_text" />
        
        <EditText android:id="@+id/login_passwordcheck_edittext"
            android:password="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <Button android:id="@+id/login_button"
            android:text="@string/login_button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
